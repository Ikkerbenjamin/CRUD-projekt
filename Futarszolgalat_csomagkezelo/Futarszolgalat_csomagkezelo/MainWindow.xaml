<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Futárszolgálat Kezelő" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor">#FF4A6DA7</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryColor">#FF6B8E23</SolidColorBrush>
        <SolidColorBrush x:Key="AccentColor">#FFD4A017</SolidColorBrush>
        <SolidColorBrush x:Key="SuccessColor">#FF28A745</SolidColorBrush>
        <SolidColorBrush x:Key="DangerColor">#FFDC3545</SolidColorBrush>
        <SolidColorBrush x:Key="WarningColor">#FFFFC107</SolidColorBrush>
        <SolidColorBrush x:Key="LightGray">#FFF8F9FA</SolidColorBrush>
        <SolidColorBrush x:Key="BorderColor">#FFDEE2E6</SolidColorBrush>
        <SolidColorBrush x:Key="TextDark">#FF212529</SolidColorBrush>
        <SolidColorBrush x:Key="TextLight">#FF6C757D</SolidColorBrush>

        <DataTemplate x:Key="ItemTemplate">
            <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="12,8" Background="White">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding PackageId}" FontSize="14" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
                        <TextBlock Text="{Binding RecipientName}" FontSize="13" Foreground="{StaticResource TextDark}" Margin="0,2,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Border Background="{Binding StatusColor}" CornerRadius="10" Padding="6,2">
                                <TextBlock Text="{Binding Status}" FontSize="10" FontWeight="SemiBold" Foreground="White"/>
                            </Border>
                            <TextBlock Text="{Binding Address}" FontSize="11" Foreground="{StaticResource TextLight}" Margin="8,0,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding PackageType}" FontSize="11" Foreground="{StaticResource SecondaryColor}" 
                                   FontWeight="SemiBold" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Date, StringFormat=MM/dd}" FontSize="10" Foreground="{StaticResource TextLight}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource DangerColor}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource WarningColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0A800"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" 
                Background="{StaticResource PrimaryColor}" 
                CornerRadius="8" 
                Padding="20,15"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="🚚 FUTÁRSZOLGÁLAT KEZELŐ" 
                              FontSize="20" FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock x:Name="PackageCountText" Text="0 aktív csomag" 
                              FontSize="14" Foreground="White" 
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource LightGray}" CornerRadius="6" Padding="15" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal">
                    <Border Background="{StaticResource PrimaryColor}" CornerRadius="4" Padding="12,8" Margin="0,0,15,0">
                        <TextBlock x:Name="TotalPackagesText" Text="Összes: 0" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <Border Background="{StaticResource WarningColor}" CornerRadius="4" Padding="12,8" Margin="0,0,15,0">
                        <TextBlock x:Name="InProgressText" Text="Folyamatban: 0" Foreground="{StaticResource TextDark}" FontWeight="Bold"/>
                    </Border>
                    <Border Background="{StaticResource SuccessColor}" CornerRadius="4" Padding="12,8">
                        <TextBlock x:Name="DeliveredText" Text="Kiszállítva: 0" Foreground="White" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Background="White" BorderBrush="{StaticResource BorderColor}" BorderThickness="2" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="{StaticResource LightGray}" CornerRadius="6,6,0,0" Padding="15,10">
                        <TextBlock Text="📦 CSOMAGOK LISTÁJA" FontSize="15" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
                    </Border>

                    <ListBox x:Name="ItemsListBox" Grid.Row="1" 
                            SelectionChanged="ItemsListBox_SelectionChanged"
                            ItemTemplate="{StaticResource ItemTemplate}"/>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Column="2" Grid.Row="1" 
                Background="{StaticResource LightGray}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="2"
                Padding="20"
                CornerRadius="8">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" CornerRadius="6" Padding="15,12" Margin="0,0,0,20">
                    <TextBlock x:Name="FormTitle" Text="➕ ÚJ CSOMAG FELVÉTELE" 
                              FontSize="16" FontWeight="Bold" 
                              Foreground="White" TextAlignment="Center"/>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label x:Name="PackageIdLabel" Content="📦 Csomag ID:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,12"/>
                            <TextBox x:Name="PackageIdTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,12"/>

                            <Label x:Name="SenderLabel" Content="👤 Feladó:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,12"/>
                            <TextBox x:Name="SenderTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,12"/>

                            <Label x:Name="RecipientLabel" Content="📍 Címzett:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,12"/>
                            <TextBox x:Name="RecipientTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,12"/>

                            <Label x:Name="AddressLabel" Content="🏠 Cím:" Grid.Row="3" Grid.Column="0" Margin="0,0,10,12"/>
                            <TextBox x:Name="AddressTextBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,12"/>

                            <Label x:Name="PhoneLabel" Content="📞 Telefon:" Grid.Row="4" Grid.Column="0" Margin="0,0,10,12"/>
                            <TextBox x:Name="PhoneTextBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,12"/>

                            <Label x:Name="PackageTypeLabel" Content="📁 Csomag típus:" Grid.Row="5" Grid.Column="0" Margin="0,0,10,12"/>
                            <ComboBox x:Name="PackageTypeComboBox" Grid.Row="5" Grid.Column="1" Margin="0,0,0,12"/>

                            <Label x:Name="StatusLabel" Content="🔄 Státusz:" Grid.Row="6" Grid.Column="0" Margin="0,0,10,12"/>
                            <ComboBox x:Name="StatusComboBox" Grid.Row="6" Grid.Column="1" Margin="0,0,0,12"/>

                            <Label x:Name="DateLabel" Content="📅 Feladás dátuma:" Grid.Row="7" Grid.Column="0" Margin="0,0,10,12"/>
                            <DatePicker x:Name="DatePicker" Grid.Row="7" Grid.Column="1" Margin="0,0,0,12"/>

                            <Label x:Name="NotesLabel" Content="📝 Megjegyzés:" Grid.Row="8" Grid.Column="0" Margin="0,0,10,12"/>
                            <TextBox x:Name="NotesTextBox" Grid.Row="8" Grid.Column="1" 
                                    Height="70" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,12"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Button x:Name="MarkDeliveredButton" Content="✅ KISZÁLLÍTVA" Style="{StaticResource SuccessButton}" 
                               Click="MarkDeliveredButton_Click" Margin="0,0,8,0" Padding="20,10"/>
                        <Button x:Name="UpdateStatusButton" Content="🔄 STÁTUSZ" Style="{StaticResource WarningButton}" 
                               Click="UpdateStatusButton_Click" Padding="20,10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="DeleteButton" Content="🗑️ TÖRLÉS" Style="{StaticResource DeleteButton}" 
                               Click="DeleteButton_Click" Margin="0,0,8,0" Padding="20,10"/>
                        <Button x:Name="UpdateButton" Content="✏️ MÓDOSÍTÁS" Click="UpdateButton_Click" Margin="0,0,8,0" Padding="20,10"/>
                        <Button x:Name="AddButton" Content="➕ HOZZÁADÁS" Click="AddButton_Click" Padding="20,10"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>