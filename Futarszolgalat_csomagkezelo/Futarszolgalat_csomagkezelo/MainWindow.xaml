<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Futárszolgálat Kezelő" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Window.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <Border BorderBrush="#ddd" BorderThickness="0,0,0,1" Padding="10,5">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding PackageId}" FontSize="14" FontWeight="Bold" Foreground="#007acc"/>
                    <TextBlock Text="{Binding RecipientName}" FontSize="12" Foreground="#333"/>
                    <TextBlock Text="{Binding Status}" FontSize="11" Foreground="#666"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#007acc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005a9e"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#d13438"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#a4262c"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeliveredButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#107c10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0d6b0d"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Futárszolgálat Kezelő" FontSize="24" FontWeight="Bold" Foreground="#007acc"/>
        </StackPanel>

        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Csomagok listája" FontSize="16" FontWeight="SemiBold" Foreground="#333"/>
                <TextBlock x:Name="PackageCountText" Text=" (0 csomag)" FontSize="16" Foreground="#666" Margin="10,0,0,0"/>
            </StackPanel>

            <ListBox x:Name="ItemsListBox" Grid.Row="1" 
                     SelectionChanged="ItemsListBox_SelectionChanged"
                     ItemTemplate="{StaticResource ItemTemplate}"/>
        </Grid>

        <Border Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" 
                Background="White" 
                BorderBrush="#ddd" 
                BorderThickness="1"
                Padding="20"
                CornerRadius="8">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="FormTitle" Text="Új csomag felvétele" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="#007acc" Margin="0,0,0,20"/>

                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <Grid Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Csomag azonosító:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,0"/>
                        <TextBox x:Name="PackageIdTextBox" Grid.Row="0" Grid.Column="1"/>

                        <Label Content="Feladó:" Grid.Row="1" Grid.Column="0" Margin="0,10,10,0"/>
                        <TextBox x:Name="SenderTextBox" Grid.Row="1" Grid.Column="1" Margin="0,10,0,0"/>

                        <Label Content="Címzett:" Grid.Row="2" Grid.Column="0" Margin="0,10,10,0"/>
                        <TextBox x:Name="RecipientTextBox" Grid.Row="2" Grid.Column="1" Margin="0,10,0,0"/>

                        <Label Content="Cím:" Grid.Row="3" Grid.Column="0" Margin="0,10,10,0"/>
                        <TextBox x:Name="AddressTextBox" Grid.Row="3" Grid.Column="1" Margin="0,10,0,0"/>

                        <Label Content="Telefonszám:" Grid.Row="4" Grid.Column="0" Margin="0,10,10,0"/>
                        <TextBox x:Name="PhoneTextBox" Grid.Row="4" Grid.Column="1" Margin="0,10,0,0"/>

                        <Label Content="Csomag típusa:" Grid.Row="5" Grid.Column="0" Margin="0,10,10,0"/>
                        <ComboBox x:Name="PackageTypeComboBox" Grid.Row="5" Grid.Column="1" Margin="0,10,0,0"/>

                        <Label Content="Státusz:" Grid.Row="6" Grid.Column="0" Margin="0,10,10,0"/>
                        <ComboBox x:Name="StatusComboBox" Grid.Row="6" Grid.Column="1" Margin="0,10,0,0"/>

                        <Label Content="Feladás dátuma:" Grid.Row="7" Grid.Column="0" Margin="0,10,10,0"/>
                        <DatePicker x:Name="DatePicker" Grid.Row="7" Grid.Column="1" Margin="0,10,0,0"/>

                        <Label Content="Megjegyzés:" Grid.Row="8" Grid.Column="0" Margin="0,10,10,0"/>
                        <TextBox x:Name="NotesTextBox" Grid.Row="8" Grid.Column="1" 
                                 Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,10,0,0"/>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:Name="MarkDeliveredButton" Content="Kiszállítva" Style="{StaticResource DeliveredButton}" Click="MarkDeliveredButton_Click" Margin="0,0,10,0"/>
                    <Button x:Name="DeleteButton" Content="Törlés" Style="{StaticResource DeleteButton}" Click="DeleteButton_Click" Margin="0,0,10,0"/>
                    <Button x:Name="UpdateButton" Content="Módosítás" Click="UpdateButton_Click" Margin="0,0,10,0"/>
                    <Button x:Name="AddButton" Content="Hozzáadás" Click="AddButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>